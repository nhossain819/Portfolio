"""
Odds or Evens
"""

def odd_even(x):
    if x % 2 == 0:
        return "This number is even!"
    else:
        return "This number is odd!"
    
odd_even2 = lambda x: "This number is even!" if x % 2 == 0 else "This number is odd!"


